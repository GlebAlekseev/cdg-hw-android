<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailMaterialCardView">
        <item name="cardElevation">@dimen/small_elevation</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.DetailMaterialCardView
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.DetailMaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/small_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/small_corner_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.DetailMaterialCardView.Right" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/small_corner_radius</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/small_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.DetailMaterialCardView.Left" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/small_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/small_corner_radius</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="closeIconTint">?attr/colorOnPrimary</item>
        <item name="queryHint">@string/team_name_text</item>
        <item name="closeIcon">@drawable/ic_cross_24</item>
        <item name="android:maxWidth">99999dp</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>
</resources>