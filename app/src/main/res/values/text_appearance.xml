<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="Base.TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.ListItem.Small" parent="Base.TextAppearance">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="TextAppearance.ListItem.Medium" parent="Base.TextAppearance">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.ListItem.Large" parent="Base.TextAppearance">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DetailContent.Small" parent="Base.TextAppearance">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.DetailContent.Medium" parent="Base.TextAppearance">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.DetailContent.Large" parent="Base.TextAppearance">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>